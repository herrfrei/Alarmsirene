{
  "elements": [
    {
      "type": "ExpansionPanel",
      "caption": "Funktionen",
      "items": [
        {
          "type": "CheckBox",
          "name": "MaintenanceMode",
          "caption": "Wartungsmodus"
        },
        {
          "type": "Label",
          "caption": "\nBitte wählen Sie die zu steuernden Funktionen aus"
        },
        {
          "type": "CheckBox",
          "name": "EnableAlarmSiren",
          "caption": "Alarmsirene (Aus/An)"
        },
        {
          "type": "CheckBox",
          "name": "EnableSignallingAmount",
          "caption": "Auslösungen (Info)"
        },
        {
          "type": "CheckBox",
          "name": "EnableResetSignallingAmount",
          "caption": "Rückstellung (Reset)"
        },
        {
          "type": "CheckBox",
          "name": "EnableMuteMode",
          "caption": "Stummschaltung (Aus/An)"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Alarmsirene",
      "items": [
        {
          "type": "Label",
          "caption": "Bitte wählen Sie die Variable für die Alarmsirene aus"
        },
        {
          "type": "SelectVariable",
          "name": "AlarmSiren",
          "caption": "Alarmsirene",
          "width": "600px"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie die Schaltverzögerung an"
        },
        {
          "type": "NumberSpinner",
          "name": "AlarmSirenSwitchingDelay",
          "caption": "Schaltverzögerung",
          "minimum": 0,
          "suffix": "Millisekunden"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Voralarm",
      "items": [
        {
          "type": "CheckBox",
          "name": "UsePreAlarm",
          "caption": "Voralarm"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie die Dauer für den Voralarm an"
        },
        {
          "type": "NumberSpinner",
          "name": "PreAlarmDuration",
          "caption": "Dauer",
          "minimum": 1,
          "maximum": 60,
          "suffix": "Sekunden"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Hauptalarm",
      "items": [
        {
          "type": "CheckBox",
          "name": "UseMainAlarm",
          "caption": "Hauptalarm"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie die Einschaltverzögerung an"
        },
        {
          "type": "NumberSpinner",
          "name": "MainAlarmSignallingDelay",
          "caption": "Einschaltverzögerung",
          "minimum": 0,
          "suffix": "Sekunden"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie die Dauer für den Hauptalarm an"
        },
        {
          "type": "NumberSpinner",
          "name": "MainAlarmAcousticSignallingDuration",
          "caption": "Dauer",
          "minimum": 0,
          "maximum": 180,
          "suffix": "Sekunden"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie die maximale Anzahl der Auslösungen bis zur Rückstellung an"
        },
        {
          "type": "NumberSpinner",
          "name": "MainAlarmMaximumSignallingAmount",
          "caption": "Maximale Auslösungen",
          "minimum": 0
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Auslöser",
      "items": [
        {
          "type": "Label",
          "caption": "Bitte fügen Sie die auslösenden Variablen hinzu"
        },
        {
          "type": "List",
          "name": "TriggerVariables",
          "rowCount": 10,
          "add": true,
          "delete": true,
          "sort": {
            "column": "ID",
            "direction": "ascending"
          },
          "columns": [
            {
              "caption": "Aktiviert",
              "name": "Use",
              "width": "100px",
              "add": true,
              "edit": {
                "type": "CheckBox"
              }
            },
            {
              "caption": "Variable",
              "name": "ID",
              "width": "600px",
              "add": 0,
              "onClick": "echo 'ID: ' . $TriggerVariables['ID'];",
              "edit": {
                "type": "SelectVariable"
              }
            },
            {
              "caption": "Einschalten",
              "name": "TriggerValueOn",
              "width": "200px",
              "add": 1,
              "edit": {
                "type": "Select",
                "options": [
                  {
                    "caption": "0 | false",
                    "value": 0
                  },
                  {
                    "caption": "1 | true",
                    "value": 1
                  },
                  {
                    "caption": "2",
                    "value": 2
                  }
                ]
              }
            },
            {
              "caption": "Ausschalten",
              "name": "TriggerValueOff",
              "width": "200px",
              "add": -1,
              "edit": {
                "type": "Select",
                "options": [
                  {
                    "caption": "Keine Aktion",
                    "value": -1
                  },
                  {
                    "caption": "0 | false",
                    "value": 0
                  },
                  {
                    "caption": "1 | true",
                    "value": 1
                  },
                  {
                    "caption": "2",
                    "value": 2
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Alarmprotokoll",
      "items": [
        {
          "type": "Label",
          "caption": "Bitte wählen Sie die Instanz für das Alarmprotokoll aus"
        },
        {
          "type": "SelectInstance",
          "name": "AlarmProtocol",
          "caption": "Alarmprotokoll",
          "width": "600px"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Stummschaltung",
      "items": [
        {
          "type": "CheckBox",
          "name": "UseAutomaticMuteMode",
          "caption": "Automatische Stummschaltung"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie die Startzeit für die Stummschaltung an"
        },
        {
          "type": "SelectTime",
          "name": "MuteModeStartTime",
          "caption": "Startzeit"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie die Endzeit für die Stummschaltung an"
        },
        {
          "type": "SelectTime",
          "name": "MuteModeEndTime",
          "caption": "Endzeit"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "ExpansionPanel",
      "caption": "Konfiguration",
      "items": [
        {
          "type": "Button",
          "caption": "Neu einlesen",
          "onClick": "AS1_ReloadConfiguration($id);"
        },
        {
          "type": "RowLayout",
          "items": [
            {
              "type": "SelectCategory",
              "name": "BackupCategory",
              "caption": "Kategorie",
              "width": "600px"
            },
            {
              "type": "Label",
              "caption": " "
            },
            {
              "type": "Button",
              "caption": "Sichern",
              "onClick": "AS1_CreateBackup($id, $BackupCategory);"
            }
          ]
        },
        {
          "type": "RowLayout",
          "items": [
            {
              "type": "SelectScript",
              "name": "ConfigurationScript",
              "caption": "Konfiguration",
              "width": "600px"
            },
            {
              "type": "Label",
              "caption": " "
            },
            {
              "type": "PopupButton",
              "caption": "Wiederherstellen",
              "popup": {
                "caption": "Konfiguration wirklich wiederherstellen?",
                "items": [
                  {
                    "type": "Button",
                    "caption": "Wiederherstellen",
                    "onClick": "AS1_RestoreConfiguration($id, $ConfigurationScript);"
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Registrierte Nachrichten",
      "items": [
        {
          "type": "List",
          "name": "RegisteredMessages",
          "rowCount": 11,
          "sort": {
            "column": "SenderID",
            "direction": "ascending"
          },
          "columns": [
            {
              "caption": "Sender ID",
              "name": "SenderID",
              "width": "150px"
            },
            {
              "caption": "Sender Name",
              "name": "SenderName",
              "width": "450px"
            },
            {
              "caption": "Nachrichten ID",
              "name": "MessageID",
              "width": "150px"
            },
            {
              "caption": "Nachrichten Bezeichnung",
              "name": "MessageDescription",
              "width": "250px"
            }
          ]
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Attribute",
      "items": [
        {
          "type": "Label",
          "caption": "Hauptalarm:",
          "name": "AttributeMainAlarm"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Testbereich",
      "items": [
        {
          "type": "TestCenter"
        }
      ]
    }
  ],
  "status": [
    {
      "code": 101,
      "icon": "active",
      "caption": "Alarmsirene wird erstellt"
    },
    {
      "code": 102,
      "icon": "active",
      "caption": "Alarmsirene ist aktiv"
    },
    {
      "code": 103,
      "icon": "active",
      "caption": "Alarmsirene wird gelöscht"
    },
    {
      "code": 104,
      "icon": "inactive",
      "caption": "Alarmsirene ist inaktiv"
    },
    {
      "code": 200,
      "icon": "inactive",
      "caption": "Es ist Fehler aufgetreten, weitere Informationen unter Meldungen, im Log oder Debug!"
    }
  ]
}